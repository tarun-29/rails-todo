<h1>Edit Task</h1>

<% @task.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>

<%= form_for @task do |f|%>
  <%= f.label "Title:"%><br>
  <%=f.text_field :title %><br>
  <%= f.label "Details:"%><br>
  <%= f.text_area :details %><br>
  <%= f.label "Completed" %>
  <%= f.check_box :completed %><br>
  <%=f.submit%>
<% end %>
